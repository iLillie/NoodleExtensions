{
  "$schema": "https://raw.githubusercontent.com/QuestPackageManager/QPM.Package/refs/heads/main/qpm.schema.json",
  "version": "0.4.0",
  "sharedDir": "shared",
  "dependenciesDir": "extern",
  "info": {
    "name": "Noodle Extensions",
    "id": "NoodleExtensions",
    "version": "1.0.0",
    "url": null,
    "additionalData": {
      "overrideSoName": "libnoodleextensions.so",
      "cmake": true
    }
  },
  "workspace": {
    "scripts": {
      "a2l": [
        "pwsh ./scripts/addr2line.ps1 libnoodleextensions.so $0"
      ],
      "build": [
        "pwsh ./scripts/build.ps1 --release"
      ],
      "clean": [
        "pwsh ./scripts/build.ps1 -clean"
      ],
      "copy": [
        "pwsh ./scripts/copy.ps1"
      ],
      "copyRelease": [
        "pwsh ./scripts/copy.ps1 --release"
      ],
      "logcat": [
        "pwsh ./scripts/start-logging.ps1"
      ],
      "qmod": [
        "pwsh ./scripts/build.ps1 --release",
        "pwsh ./scripts/createqmod.ps1"
      ],
      "restart": [
        "pwsh ./scripts/restart-game.ps1"
      ],
      "stack": [
        "pwsh ./scripts/ndk-stack.ps1"
      ],
      "tomb": [
        "pwsh ./scripts/pull-tombstone.ps1"
      ]
    },
    "ndk": "^27.3.13750724",
    "qmodIncludeDirs": [
      "./build",
      "./extern/libs"
    ],
    "qmodIncludeFiles": [],
    "qmodOutput": "NoodleExtensions.qmod"
  },
  "dependencies": [
    {
      "id": "beatsaber-hook",
      "versionRange": "^7.4.2",
      "additionalData": {}
    },
    {
      "id": "bs-cordl",
      "versionRange": "4200.*",
      "additionalData": {}
    },
    {
      "id": "custom-types",
      "versionRange": "^0.19.0",
      "additionalData": {
        "includeQmod": true
      }
    },
    {
      "id": "custom-json-data",
      "versionRange": "^0.25.0",
      "additionalData": {}
    },
    {
      "id": "config-utils",
      "versionRange": "=2.0.4",
      "additionalData": {}
    },
    {
      "id": "tracks",
      "versionRange": "^2.5.0",
      "additionalData": {}
    },
    {
      "id": "songcore",
      "versionRange": "^1.2.0",
      "additionalData": {
        "includeQmod": true
      }
    },
    {
      "id": "sombrero",
      "versionRange": "^0.1.43",
      "additionalData": {}
    },
    {
      "id": "scotland2",
      "versionRange": "^0.1.6",
      "additionalData": {
        "includeQmod": false
      }
    },
    {
      "id": "cpp-semver",
      "versionRange": "^0.1.2",
      "additionalData": {}
    },
    {
      "id": "paper2_scotland2",
      "versionRange": "^4.6.4",
      "additionalData": {}
    },
    {
      "id": "conditional-dependencies",
      "versionRange": "^0.3.0",
      "additionalData": {}
    },
    {
      "id": "bsml",
      "versionRange": "^0.5.1",
      "additionalData": {}
    },
    {
      "id": "flamingo",
      "versionRange": "^1.1.2",
      "additionalData": {}
    }
  ]
}